<UserControl x:Class="RealtimeSearch.RenamePaletteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RealtimeSearch"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
      
    <Grid x:Name="Root" SizeChanged="MeasureText_SizeChanged">
        <TextBlock x:Name="MeasureText" Visibility="Hidden"
                   FontFamily="{Binding ElementName=NameTextBox, Path=FontFamily}"
                   FontSize="{Binding ElementName=NameTextBox, Path=FontSize}"
                   Text="{Binding ElementName=NameTextBox, Path=Text}"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   SizeChanged="MeasureText_SizeChanged"/>
        <TextBox x:Name="NameTextBox"
                 Foreground="#222"
                 Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
