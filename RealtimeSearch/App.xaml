        <!-- PushPin CheckBox Template -->
        <ControlTemplate x:Key="PushpinCheckBoxTemplate" TargetType="{x:Type CheckBox}">
            <Grid>
                <Rectangle x:Name="baseRectangle" RadiusY="0" RadiusX="0" StrokeThickness="1" Fill="{x:Null}"/>
                <Image x:Name="mark" MinWidth="8" MinHeight="8" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Source="{StaticResource ic_pushpin}" Opacity="0.1"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <!-- <Setter Property="Fill" TargetName="baseRectangle" Value="#FFBDDDFF"/> -->
                    <Setter Property="Opacity" TargetName="mark" Value="0.2"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True" >
                    <Setter Property="Opacity" TargetName="mark" Value="1"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        
